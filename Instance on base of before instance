class Point:
    def __init__(self, x = 0, y = 0):
        self.x = x
        self.y = y
        
pt = Point()
print(pt.__dict__)

pt2 = Point(pt.x, 2)#__init__() takes from 1 to 3 positional arguments 
print(pt2.__dict__)

pt3 = Point(pt2.y, 9)#arguments given from before instance (here  y )
print(pt3.__dict__) 

pt4 = Point()#arguments not given from before instance (but from class  - yes)
print(pt4.__dict__) 
        
